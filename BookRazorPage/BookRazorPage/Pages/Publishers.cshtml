@page
@model BookStoreWebSite.Pages.PublishersModel
@{
}

<div>
    <p class="display-4" style="font-size: 1.3rem; font-weight: 500;">Publishers Menu</p>
    <div class="ps-5 ms-5">
        <div class="d-flex mt-2" style="font-size: 0.8rem;">

            <div class="mx-3">
            
                    <div class="mt-2 pt-1">
                        <form id="editForm" class="row border border-3 mt-2">
                            <input type="hidden" id="editId" name="id" />
                            <div class="col-md-6">
                                <label for="editPubName" class="form-label">PublisherName</label>
                            <input type="text" class="form-control" id="editPubName" name="pubName">
                            </div>
                            <div class="col-md-6">
                                <label for="editEmail" class="form-label">Email</label>
                            <input type="text" class="form-control" id="editEmail" name="email"></input>
                            </div>
                          
                            <div class="col-md-6">
                                <label for="editCity" class="form-label">City</label>
                                <input type="text" class="form-control" id="editCity" name="city">
                            </div>
                            <div class="col-md-6 pb-2">
                                <label for="editState" class="form-label">State</label>
                                <input type="text" class="form-control" id="editState" name="state">
                            </div>
                        <div class="col-md-6 pb-2">
                            <label for="editCountry" class="form-label">Country</label>
                            <input type="text" class="form-control" id="editCountry" name="country">
                        </div>

                        </form>
                    </div>
                    
        </div>

            </div>
            <script src="js/site.js" asp-append-version="true"></script>
        </div>
    </div>

<p class="display-4" style="font-size: 1rem; font-weight: 500">All Publishers</p>
<hr />
<div style="width: 70%; gap: 5%; margin: 0 auto" class="d-flex justify-content-start flex-wrap">
    <table class="table table-primary  table-bordered table-hover ">
        <thead>
            <tr>
                <th scope="col">Publishername</th>
                <th scope="col">EmailAddress</th>
                <th scope="col">City</th>
                <th scope="col">State</th>
                <th scope="col">Country</th>
                <th scope="col">Edit</th>

            </tr>
        </thead>
        <tbody id="pub">
        </tbody>

    </table>


    <script type="text/javascript">

        getPub();

    </script>
</div>